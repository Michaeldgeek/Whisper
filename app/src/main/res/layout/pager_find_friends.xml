<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity$PlaceholderFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#1C2027"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_text_search"
            android:src="@drawable/search"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:id="@+id/find_frnds"
            />
    </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note_below_invite"
                android:id="@+id/note_below_invite"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="27dp"
                android:textColor="#8B8B8B"
                android:textSize="18sp"
                android:gravity="center"
                />
            </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <Button
                android:id="@+id/fb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/invite_friends"
                android:layout_marginRight="@dimen/invite_friends"
                android:text="Find your Facebook Friends"
                android:gravity="center"
                android:textColor="@color/md_white_1000"
                android:textSize="14sp"
                android:background="@drawable/com_facebook_button_background"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/invite_friends"
                android:layout_marginRight="@dimen/invite_friends"
                android:text="Connect with Instagram"
                android:gravity="center"
                android:textColor="@color/md_white_1000"
                android:textSize="14sp"
                android:background="@drawable/instagram_bg"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </android.support.design.widget.CoordinatorLayout>